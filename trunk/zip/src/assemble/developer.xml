  <id>developer</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
  	<dependencySet>
  		<unpack>false</unpack>
  		<useTransitiveDependencies>false</useTransitiveDependencies>
  	</dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <includes>
        <include>../about*</include>
        <include>../license*</include>
        <include>../release-notes*</include>
        <include>../roadmap*</include>
        <include>../system-requirements*</include>
      </includes>
    </fileSet>
    <fileSet>
    	<directory>../</directory>
    	<includes>
    		<include>conf</include>
    	</includes>
    </fileSet>            
    <fileSet>
    	<directory>../demo</directory>
    	<includes>
    		<include>pom.xml</include>
    		<include>conf</include>
    		<include>src</include>
    	</includes>
    </fileSet>
  </fileSets>  
